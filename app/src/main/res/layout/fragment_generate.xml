<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="81dp">

    <Button
            android:id="@+id/getWordButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Generate Idea"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/descriptionText" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="TextView"
            android:layout_width="275dp"
            android:layout_height="37dp"
            android:id="@+id/descriptionText"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.504" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/wordImage"/>
    <ImageView
            android:layout_width="325dp"
            android:layout_height="175dp"
            tools:context="com.appsdeveloperblog.kotlinexample4.LoadGifFromURLUsingGlide"
            android:id="@+id/wordImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.508" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"/>


</android.support.constraint.ConstraintLayout>