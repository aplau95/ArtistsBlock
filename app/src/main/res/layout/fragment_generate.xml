<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

    <Button
            android:id="@+id/getWordButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Generate Idea" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="117dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="117dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/definitionText"
            app:layout_constraintEnd_toStartOf="@+id/cameraButton"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wordDisplay"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/wordImage"/>
    <android.support.design.widget.FloatingActionButton
            android:src="@android:drawable/ic_menu_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/cameraButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="325dp"
            android:layout_height="175dp"
            tools:context="com.appsdeveloperblog.kotlinexample4.LoadGifFromURLUsingGlide"
            android:id="@+id/wordImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="76dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="297dp"
            android:layout_height="84dp"
            android:gravity="center"
            android:id="@+id/definitionText" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.503" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="29dp" app:layout_constraintTop_toBottomOf="@+id/wordDisplay"/>


</android.support.constraint.ConstraintLayout>