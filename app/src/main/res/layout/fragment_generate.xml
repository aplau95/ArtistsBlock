<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

    <Button
            android:id="@+id/getWordButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="117dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="117dp" android:layout_marginBottom="148dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="315dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wordDisplay"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/wordImage"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="37dp"
            app:layout_constraintBottom_toTopOf="@+id/getWordButton"/>
    <android.support.design.widget.FloatingActionButton
            android:src="@android:drawable/ic_menu_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/cameraButton" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <ImageView
            android:layout_width="252dp"
            android:layout_height="172dp"
            tools:context="com.appsdeveloperblog.kotlinexample4.LoadGifFromURLUsingGlide"
            android:id="@+id/wordImage"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="63dp" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/wordDisplay"/>


</android.support.constraint.ConstraintLayout>